---
const navItems = [
  { text: 'Home', href: '/' },
  { text: 'Services', href: '#services' },
  { text: 'Contact', href: '#contact' },
];
---

<header class="fixed w-full bg-base/90 backdrop-blur-sm z-50 shadow-sm">
  <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex items-center">
      <img 
        src="/logo.svg" 
        alt="Kanpur Media" 
        class="h-[60px] w-[180px] object-contain"
        width="180"
        height="60"
      />
    </a>
    
    <ul class="hidden md:flex space-x-8">
      {navItems.map(item => (
        <li>
          <a href={item.href} class="text-secondary hover:text-primary transition-colors">
            {item.text}
          </a>
        </li>
      ))}
    </ul>
    
    <a href="#contact" class="bg-primary text-white px-6 py-2 rounded-full hover:bg-primary-600 transition-colors">
      Contact Us
    </a>
  </nav>
</header>